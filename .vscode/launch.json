  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug 'activerecord'",
      "cargo": {
        "args": [
          "run",
          "--features",
          "jit-log",
          "--bin=monoruby",
          "--package=monoruby",
        ],
        "filter": {
          "name": "monoruby",
          "kind": "bin"
        }
      },
      "args": [
        "/home/monochrome/yjit-bench/benchmarks/activerecord/benchmark.rb"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug 'lee'",
      "cargo": {
        "args": [
          "run",
          "--features",
          "jit-log",
        ],
      },
      "args": [
        "/home/monochrome/yjit-bench/benchmarks/lee/benchmark.rb",
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PATH": "/home/monochrome/.rbenv/shims:${env:PATH}"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'monoruby'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=monoruby",
          "--package=monoruby"
        ],
        "filter": {
          "name": "monoruby",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}