  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug 'optcarrot'",
      "cargo": {
        "args": [
          "run",
          "--features",
          "jit-debug",
          "--bin=monoruby",
          "--package=monoruby",
        ],
        "filter": {
          "name": "monoruby",
          "kind": "bin"
        }
      },
      "args": [
        "../optcarrot/bin/optcarrot",
        "-b",
        "../optcarrot/examples/Lan_Master.nes"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug 'bedcov'",
      "cargo": {
        "args": [
          "run",
          "--features",
          "emit-asm",
          "--bin=monoruby",
          "--package=monoruby",
        ],
        "filter": {
          "name": "monoruby",
          "kind": "bin"
        }
      },
      "args": [
        "benchmark/plb2/bedcov.rb",
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'monoruby'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=monoruby",
          "--package=monoruby"
        ],
        "filter": {
          "name": "monoruby",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}